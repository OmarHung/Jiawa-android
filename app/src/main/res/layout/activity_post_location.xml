<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/primaryDark"
        android:elevation="6dp">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/accent"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/title_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="夾點分享"
            android:textColor="@color/accent"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@color/transparent"
            android:src="@mipmap/ic_send" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:textCursorDrawable="@null">

                <EditText
                    android:id="@+id/edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="標題"
                    android:lines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/sp_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <Spinner
                android:id="@+id/sp_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_city"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <Spinner
                android:id="@+id/sp_number_of_machine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_type"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_number_of_machine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="地圖座標"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:hint="22.6348129"
                android:inputType="numberDecimal"
                android:lines="1"
                android:maxLength="11" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edt_lat"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/edt_lat"
                android:text=", "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_lng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edt_lat"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/textView3"
                android:gravity="center"
                android:hint="120.5451795"
                android:inputType="numberDecimal"
                android:lines="1"
                android:maxLength="11" />


            <Button
                android:id="@+id/btn_quick_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edt_lng"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/edt_lng"
                android:background="@color/primary"
                android:text="速填"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_lat"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="圖片"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/img_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="8dp"></android.support.v7.widget.RecyclerView>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_list"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textCursorDrawable="@null">

                <EditText
                    android:id="@+id/edt_content"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="top|left"
                    android:hint="內容" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!--
    shape的類型含有:
    1.rectangle   長方形、矩形
    2.oval   橢圓形、卵形
    3.line   線
    4.ring   環形
    -->
    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <size
        android:width="50dp"
        android:height="50dp" />
    <!-- 外框，框線粗細，框線顏色 -->
    <solid
        android:color="@color/primary" />
</shape>